<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/fitment_imgbutton1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/lib_style_head_back_nor"
                android:padding="15dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/fitment_tablayout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:tabMode="scrollable" />

            <ImageButton
                android:id="@+id/fitment_imgbutton2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/school_tab_nor" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/fitment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>