<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:padding="15dp"
            android:id="@+id/fitment_imgbutton1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/lib_style_head_back_nor"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/fitment_tablayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:tabMode="scrollable"
            android:layout_marginRight="5dp"
            android:layout_height="40dp"></android.support.design.widget.TabLayout>
        <ImageButton
            android:id="@+id/fitment_imgbutton2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/school_tab_nor"/>
    </LinearLayout>
    <com.cjj.MaterialRefreshLayout
        android:id="@+id/fitment_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/fitment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    </com.cjj.MaterialRefreshLayout>
</LinearLayout>