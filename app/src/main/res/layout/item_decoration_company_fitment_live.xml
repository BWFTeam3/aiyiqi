<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView_fitment_live"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/textView_fitment_live_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="123456"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_fitment_live_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="123456"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:id="@+id/view_white_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/simpleDraweeView_fitment_live"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textView_no_more_datas"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/view_white_line"
        android:gravity="center"
        android:text="@string/no_more_datas"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>