<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        fresco:placeholderImageScaleType="fitXY"
        android:id="@+id/recycle_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/recycle_text_lasttime"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical|right"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/recycle_imageview_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/looked_hui"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/recycle_textview_viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/recycle_imageview_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/zan_hui"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/recycle_textview_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aa"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>