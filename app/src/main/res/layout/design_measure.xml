<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="725dp"
        andrndroid.out_below="@+id/Re"
        android:layout_below="@+id/Re"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/l2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="#009900"
           android:gravity="center">
           <ImageView
               android:layout_width="21dip"
               android:layout_height="21dip"
               android:background="@mipmap/icon_time"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="预约报名"
               android:textSize="20dp"
               android:textColor="#EEEEEE"/>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="21dip"
                android:layout_height="21dip"
                android:background="@mipmap/zixun_icon_selected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009900"
                android:textSize="20dp"
                android:text="在线答疑"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TabLayout
            android:id="@+id/Tablayout111"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/l3"
            android:layout_toStartOf="@+id/l1">
        </android.support.design.widget.TabLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/image111"
            android:layout_width="18dp"
            android:background="@mipmap/lib_style_head_back_nor"
            android:layout_height="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
        <ImageButton
            android:id="@+id/image222"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_free_call"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
