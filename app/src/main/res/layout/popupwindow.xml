<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/popupwindow_linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/create_feed_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/create_feed_normal" />

        <TextView
            android:id="@+id/create_feed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/window_linearlayout1"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popupwindow_linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/show_order_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/show_order_normal" />

        <TextView
            android:id="@+id/show_order_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/window_linearlayout2"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popupwindow_linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/create_note_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/create_note_normal"
            />

        <TextView
            android:id="@+id/create_note_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/window_linearlayout3"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popupwindow_linearlayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/create_complain_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/create_complain_normal"

            />

        <TextView
            android:id="@+id/create_complain_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/window_linearlayout4"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/essence_fragmenat_button_close"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/float_layer_menu_close" />

</RelativeLayout>