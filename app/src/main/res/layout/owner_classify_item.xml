<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffffff">
    <LinearLayout
        android:id="@+id/owner_classify_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/owner_classify_post_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#00ffffff"
            android:src="@drawable/create_feed_normal"/>
        <TextView
            android:id="@+id/owner_classify_post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发帖"
            android:layout_marginTop="10dp"
            android:textSize="16.0sp"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/owner_classify_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >
        <ImageButton
            android:id="@+id/owner_classify_show_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/show_order_normal"
            android:background="#00ffffff"
            />
        <TextView
            android:id="@+id/show_order_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晒单"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>